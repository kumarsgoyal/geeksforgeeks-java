

/*
Node class is as follows:

class Node {
    int data;
    Node next;

    public Node (int data){
        this.data = data;
        this.next = null;
    }
}
*/

class Solution {

    //Return the sum of last k nodes

    private Node reverse(Node head) {
        Node curr = head;
        Node prev = null;
        Node next = null;

        while(curr != null) {
            next = curr.next;
            curr.next = prev;
            prev = curr;
            curr = next;
        }

        return prev;
    }

    public int sum(Node head, int k){
        head = reverse(head);
        int sum = 0;

        while(head != null && k > 0) {
            sum += head.data;
            head = head.next;
            k--;
        }

        return sum;
    }
}